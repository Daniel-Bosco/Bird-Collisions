<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between">
  <div><h1>Weathers</h1></div>
  <div class="ms-5"><%= paginate @weathers, window: 3, outer_window: 3 %></div>
</div>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Celsius temperature</th>
      <th>Humidity</th>
      <th>Wind speed</th>
      <th>Average rainfall</th>
      <th>Insolation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weathers.each do |weather| %>
      <tr>
        <td><%= weather.celsius_temperature %> Â°C</td>
        <td><%= weather.humidity %>%</td>
        <td><%= weather.wind_speed %> km/h</td>
        <td><%= weather.average_rainfall %> mm</td>
        <td><%= weather.insolation %> kW/m&sup2;</td>
        <td><% if can? :show, Weather %><%= link_to 'Show', weather, class: 'btn btn-sm btn-primary' %><% end %></td>
        <td><% if can? :update, Weather %><%= link_to 'Edit', edit_weather_path(weather), class: 'btn btn-sm btn-secondary' %><% end %></td>
        <td><% if can? :destroy, Weather %><%= link_to 'Destroy', weather, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Weather %><%= link_to 'New Weather', new_weather_path, class: 'btn btn-sm btn-success' %><% end %>
