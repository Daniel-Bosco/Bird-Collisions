<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between">
  <div><h1>Flights</h1></div>
  <div class="ms-5"><%= paginate @flights, window: 3, outer_window: 3 %></div>
</div>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Aircraft (Certification)</th>
      <th>Pilot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.aircraft.model_certification %></td>
        <td><%= flight.pilot.full_name %></td>
        <td><% if can? :show, Flight %><%= link_to 'Show', flight, class: 'btn btn-sm btn-primary' %><% end %></td>
        <td><% if can? :update, Flight %><%= link_to 'Edit', edit_flight_path(flight), class: 'btn btn-sm btn-secondary' %><% end %></td>
        <td><% if can? :destroy, Flight %><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Flight %><%= link_to 'New Flight', new_flight_path, class: 'btn btn-sm btn-success' %><% end %>
