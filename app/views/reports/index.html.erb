<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between">
  <div><h1>Reports</h1></div>
  <div class="ms-5"><%= paginate @reports, window: 3, outer_window: 3 %></div>
</div>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Airline expense</th>
      <th>Airport expense</th>
      <th>Insurance expense</th>
      <th>Public expense</th>
      <th>Delayed flights</th>
      <th>Fatal victims</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td>$<%= report.airline_expense %></td>
        <td>$<%= report.airport_expense %></td>
        <td>$<%= report.insurance_expense %></td>
        <td>$<%= report.public_expense %></td>
        <td><%= report.delayed_flights %></td>
        <td><%= report.fatal_victims %></td>
        <td><% if can? :show, Report %><%= link_to 'Show', report, class: 'btn btn-sm btn-primary' %><% end %></td>
        <td><% if can? :update, Report %><%= link_to 'Edit', edit_report_path(report), class: 'btn btn-sm btn-secondary' %><% end %></td>
        <td><% if can? :destroy, Report %><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Report %><%= link_to 'New Report', new_report_path, class: 'btn btn-sm btn-success' %><% end %>
